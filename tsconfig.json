{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "es", "lib", "dist", "docs", "iife"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015", "ESNext", "dom", "es5", "es6"],
    "module": "ES2015",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./tsc",
    "removeComments": false,
    "noEmit": true,
    "downlevelIteration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
